  </div>
  <div class="field">
    <%= f.label :exam_number %><br>
    <%= f.select :exam_number, options_for_select(["1", "2", "3"]) %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
